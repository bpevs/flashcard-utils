{
  "compilerOptions": {
    "strict": true,
    "useUnknownInCatchVariables": true,
    "noImplicitOverride": true,
    "lib": ["deno.window", "dom", "es2023"]
  },
  "fmt": {
    "proseWrap": "never",
    "singleQuote": true,
    "semiColons": false
  },
  "imports": {
    "@flashcard/adapters": "jsr:@flashcard/adapters@0.0.1",
    "@flashcard/adapters/": "jsr:@flashcard/adapters@0.0.1/",
    "@flashcard/core": "jsr:@flashcard/core@0.0.1",
    "@flashcard/core/": "jsr:@flashcard/core@0.0.1/",
    "@flashcard/schedulers": "jsr:@flashcard/schedulers@0.0.1",
    "@flashcard/schedulers/": "jsr:@flashcard/schedulers@0.0.1/",
    "@flashcard/utils": "jsr:@flashcard/utils@0.0.1",
    "@flashcard/utils/": "jsr:@flashcard/utils@0.0.1/"
  },
  "lint": {
    "exclude": ["**/mod.js"]
  },
  "tasks": {
    "build": "deno run --allow-read --allow-write --allow-env --allow-run ./build.ts",
    "check": "deno check adapters/mod.ts && deno check components/mod.ts && deno check core/mod.ts && deno check schedulers/mod.ts && deno check utils/mod.ts",
    "test": "deno fmt && deno lint && deno task check && deno test -A",
    "test:update": "deno test -A -- --update",
    "example:sandbox": "deno run -A --watch examples/sandbox/main.ts",
    "example:words-to-apkg": "deno run -A examples/words-to-apkg/main.ts"
  },
  "workspaces": [
    "./adapters",
    "./components",
    "./core",
    "./schedulers",
    "./utils"
  ]
}
