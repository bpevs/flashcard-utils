{
  "name": "@bpev/flashcards",
  "version": "0.0.1",
  "exports": {
    ".": "./mod.ts",
    "./adapters": "./adapters/mod.ts",
    "./components": "./components/mod.ts",
    "./schedulers": "./schedulers/mod.ts",
    "./utils": "./utils/mod.ts"
  },
  "compilerOptions": {
    "lib": ["esnext", "dom", "deno.window", "dom"]
  },
  "fmt": {
    "proseWrap": "never",
    "singleQuote": true,
    "semiColons": false
  },
  "lint": {
    "exclude": ["**/mod.js"]
  },
  "tasks": {
    "build": "deno run --allow-read --allow-write --allow-env --allow-run ./build.ts",
    "test": "deno fmt && deno lint && deno check mod.ts && deno check adapters/mod.ts && deno test -A",
    "test:update": "deno test -A -- --update",
    "example:sandbox": "deno run -A --watch examples/sandbox/main.ts",
    "example:words-to-apkg": "deno run -A examples/words-to-apkg/main.ts"
  }
}
